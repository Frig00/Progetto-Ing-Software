<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>
<?import org.kordamp.ikonli.javafx.*?>

<!--<?import it.unipv.po.aioobe.trenissimo.view.ViaggioControl?>-->

<BorderPane prefHeight="660.0" prefWidth="992.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipv.po.aioobe.trenissimo.controller.RicercaController">
    <center>
        <VBox>
            <children>
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
               <tabs>
                  <Tab text="Andata">
                     <content>
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" vbarPolicy="ALWAYS">
                                <content>
                                    <VBox fx:id="boxAndata" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" spacing="8.0">
                                        <padding>
                                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                                        </padding>
                                    </VBox>
                                </content>
                            </ScrollPane>
                     </content>
                  </Tab>
                   <Tab text="Ritorno">
                       <content>
                           <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" vbarPolicy="ALWAYS">
                               <content>
                                   <VBox fx:id="boxRitorno" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" spacing="8.0">
                                       <padding>
                                           <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                                       </padding>
                                   </VBox>
                               </content>
                           </ScrollPane>
                       </content>
                   </Tab>
               </tabs>
            </TabPane>
            </children>
        </VBox>
    </center>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label onMouseClicked="#onGoToHomepage" text="Torna a homepage">
                    <graphic>
                        <FontIcon iconLiteral="fas-arrow-left" />
                    </graphic>
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Label>
            </children>
        </HBox>
    </top>
    <left>
        <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
                <TitledPane animated="false" collapsible="false" text="Prezzo">
                    <content>
                        <VBox>
                            <children>
                                <RangeSlider fx:id="rngPrezzo" blockIncrement="0.0" highValue="50.0" lowValue="20.0" majorTickUnit="2.0" max="15.0" minorTickCount="2" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" text="Orario partenza">
                    <content>
                        <VBox>
                            <children>
                                <JFXTimePicker fx:id="tmpPartenza" maxHeight="29.0" maxWidth="278.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0" prefWidth="278.0" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" text="Orario arrivo">
                    <content>
                        <VBox>
                            <children>
                                <JFXTimePicker fx:id="tmpArrivo" maxHeight="29.0" maxWidth="278.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0" prefWidth="278.0" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" layoutX="10.0" layoutY="10.0" text="Filtri">
                    <content>
                        <VBox alignment="CENTER">
                            <children>
                                <SegmentedButton fx:id="sbtFiltro" VBox.vgrow="ALWAYS">
                                    <buttons>
                                        <ToggleButton fx:id="tglFiltroOrario" selected="true">
                                            Orario
                                        </ToggleButton>
                                        <ToggleButton fx:id="tglFiltroPrezzo">
                                            Prezzo
                                        </ToggleButton>
                                        <ToggleButton fx:id="tglFiltroDurata">
                                            Durata
                                        </ToggleButton>
                                        <ToggleButton fx:id="tglFiltroCambi">
                                            Cambi
                                        </ToggleButton>
                                    </buttons>
                                </SegmentedButton>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </children>
        </VBox>
    </left>
   <bottom>
          <HBox alignment="CENTER_LEFT" prefWidth="599.0" BorderPane.alignment="CENTER">
              <children>
                  <ScrollPane vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
                      <content>
                          <HBox fx:id="boxCart" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="136.0" spacing="8.0">
                              <padding>
                                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                              </padding>
                          </HBox>
                      </content>
                  </ScrollPane>
                  <Button minWidth="-Infinity" mnemonicParsing="false" text="Procedi con l'acquisto" HBox.hgrow="NEVER">
                      <HBox.margin>
                          <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                      </HBox.margin>
                  </Button>
              </children>
          </HBox>
   </bottom>
</BorderPane>
